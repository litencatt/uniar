{{ define "admin/dashboard.go.tmpl" }}
{{ template "admin_header" . }}

<h2 class="section-title">管理ダッシュボード</h2>

<div class="dashboard-grid">
    <div class="dashboard-card">
        <h3>🎵 楽曲</h3>
        <div class="count">{{ .musicCount }}</div>
        <a href="/admin/music" class="btn">楽曲管理</a>
    </div>

    <div class="dashboard-card">
        <h3>📷 撮影</h3>
        <div class="count">{{ .photographCount }}</div>
        <a href="/admin/photograph" class="btn">撮影管理</a>
    </div>

    <div class="dashboard-card">
        <h3>🎬 シーンカード</h3>
        <div class="count">{{ .sceneCount }}</div>
        <a href="/admin/scene" class="btn">シーンカード管理</a>
    </div>
</div>

<h3 class="section-title">最新のシーンカード</h3>
<div class="admin-table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>撮影</th>
                <th>メンバー</th>
                <th>カラー</th>
                <th>SSR+</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            {{ range .recentScenes }}
            <tr>
                <td>{{ .ID }}</td>
                <td>{{ .PhotographName }}</td>
                <td>{{ .MemberName }}</td>
                <td>{{ .ColorName }}</td>
                <td>
                    {{ if eq .SsrPlus 1 }}
                    <span style="color: #e53e3e; font-weight: bold;">✓ Yes</span>
                    {{ else }}
                    <span style="color: #718096;">✗ No</span>
                    {{ end }}
                </td>
                <td>
                    <a href="/admin/scene/{{ .ID }}" class="admin-btn admin-btn-secondary">📋 詳細</a>
                    <a href="/admin/scene/{{ .ID }}/edit" class="admin-btn">✏️ 編集</a>
                </td>
            </tr>
            {{ end }}
        </tbody>
    </table>
</div>

{{ template "admin_footer" . }}
{{ end }}