{{ template "admin_header" . }}

<h2>シーンカード詳細</h2>

<div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin: 1rem 0;">
    <h3>{{ .scene.PhotographName }} - {{ .scene.MemberName }}</h3>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin: 1rem 0;">
        <div>
            <strong>ID:</strong> {{ .scene.ID }}
        </div>
        <div>
            <strong>撮影:</strong> {{ .scene.PhotographName }} (ID: {{ .scene.PhotographID }})
        </div>
        <div>
            <strong>メンバー:</strong> {{ .scene.MemberName }} (ID: {{ .scene.MemberID }})
        </div>
        <div>
            <strong>カラー:</strong> {{ .scene.ColorName }} (ID: {{ .scene.ColorTypeID }})
        </div>
        <div>
            <strong>Vocal最大値:</strong> {{ .scene.VocalMax }}
        </div>
        <div>
            <strong>Dance最大値:</strong> {{ .scene.DanceMax }}
        </div>
        <div>
            <strong>Performance最大値:</strong> {{ .scene.PerformanceMax }}
        </div>
        <div>
            <strong>総合力:</strong> {{ add .scene.VocalMax .scene.DanceMax .scene.PerformanceMax }}
        </div>
        <div>
            <strong>センタースキル:</strong> {{ .scene.CenterSkill }}
        </div>
        <div>
            <strong>期待値:</strong> {{ .scene.ExpectedValue }}
        </div>
        <div>
            <strong>SSR+:</strong> {{ if eq .scene.SsrPlus 1 }}Yes{{ else }}No{{ end }}
        </div>
    </div>
</div>

<div style="margin-top: 2rem;">
    <a href="/admin/scene/{{ .scene.ID }}/edit" class="btn">編集</a>
    <a href="/admin/scene" class="btn btn-secondary">一覧に戻る</a>
    <form method="post" action="/admin/scene/{{ .scene.ID }}/delete" style="display: inline;"
          onsubmit="return confirm('このシーンカードを削除しますか？')">
        <button type="submit" class="btn btn-danger">削除</button>
    </form>
</div>

{{ template "admin_footer" . }}