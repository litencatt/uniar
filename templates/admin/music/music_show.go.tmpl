{{ template "admin_header" . }}

<h2>楽曲詳細</h2>

<div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin: 1rem 0;">
    <h3>{{ .music.Name }}</h3>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin: 1rem 0;">
        <div>
            <strong>ID:</strong> {{ .music.ID }}
        </div>
        <div>
            <strong>Normal:</strong> {{ .music.Normal }}
        </div>
        <div>
            <strong>Pro:</strong> {{ .music.Pro }}
        </div>
        <div>
            <strong>Master:</strong> {{ .music.Master }}
        </div>
        <div>
            <strong>長さ:</strong> {{ .music.Length }}
        </div>
        <div>
            <strong>カラータイプID:</strong> {{ .music.ColorTypeID }}
        </div>
        <div>
            <strong>ライブID:</strong> {{ .music.LiveID }}
        </div>
        <div>
            <strong>楽曲ボーナス:</strong> {{ .music.MusicBonus }}
        </div>
    </div>
</div>

<div style="margin-top: 2rem;">
    <a href="/admin/music/{{ .music.ID }}/edit" class="btn">編集</a>
    <a href="/admin/music" class="btn btn-secondary">一覧に戻る</a>
    <form method="post" action="/admin/music/{{ .music.ID }}/delete" style="display: inline;"
          onsubmit="return confirm('この楽曲を削除しますか？')">
        <button type="submit" class="btn btn-danger">削除</button>
    </form>
</div>

{{ template "admin_footer" . }}