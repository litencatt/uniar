{{define "admin/import_preview.go.tmpl"}}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Import Preview - {{.entityType}} | Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h4><i class="fas fa-eye"></i> Import Preview - {{.entityType}}</h4>
                            <small class="text-muted">Review the data before importing</small>
                        </div>
                        <div>
                            <a href="/admin/import/{{.entityType}}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {{if .result.Errors}}
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Validation Errors Found</h5>
                            <p>Please fix the following errors before importing:</p>
                            <ul>
                                {{range .result.Errors}}
                                <li>Row {{.Row}}: {{.Field}} - {{.Message}}</li>
                                {{end}}
                            </ul>
                        </div>
                        {{end}}

                        <div class="mb-3">
                            <span class="badge bg-success">{{.result.Success}} valid records</span>
                            {{if .result.Failed}}
                            <span class="badge bg-danger">{{.result.Failed}} invalid records</span>
                            {{end}}
                        </div>

                        {{if .result.PreviewData}}
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead class="table-dark">
                                    <tr>
                                        {{if eq .entityType "music"}}
                                        <th>Name</th>
                                        <th>Normal</th>
                                        <th>Pro</th>
                                        <th>Master</th>
                                        <th>Length</th>
                                        <th>Color Type ID</th>
                                        <th>Live ID</th>
                                        {{else if eq .entityType "photograph"}}
                                        <th>Name</th>
                                        <th>Group ID</th>
                                        <th>Photo Type</th>
                                        {{else if eq .entityType "scene"}}
                                        <th>Photograph ID</th>
                                        <th>Member ID</th>
                                        <th>Color Type ID</th>
                                        <th>Vocal Max</th>
                                        <th>Dance Max</th>
                                        <th>Performance Max</th>
                                        <th>Center Skill</th>
                                        <th>Expected Value</th>
                                        <th>SSR Plus</th>
                                        {{end}}
                                    </tr>
                                </thead>
                                <tbody>
                                    {{range .result.PreviewData}}
                                    <tr>
                                        {{if eq $.entityType "music"}}
                                        <td>{{.name}}</td>
                                        <td>{{.normal}}</td>
                                        <td>{{.pro}}</td>
                                        <td>{{.master}}</td>
                                        <td>{{.length}}</td>
                                        <td>{{.color_type_id}}</td>
                                        <td>{{.live_id}}</td>
                                        {{else if eq $.entityType "photograph"}}
                                        <td>{{.name}}</td>
                                        <td>{{.group_id}}</td>
                                        <td>{{.photo_type}}</td>
                                        {{else if eq $.entityType "scene"}}
                                        <td>{{.photograph_id}}</td>
                                        <td>{{.member_id}}</td>
                                        <td>{{.color_type_id}}</td>
                                        <td>{{.vocal_max}}</td>
                                        <td>{{.dance_max}}</td>
                                        <td>{{.performance_max}}</td>
                                        <td>{{.center_skill}}</td>
                                        <td>{{.expected_value}}</td>
                                        <td>{{.ssr_plus}}</td>
                                        {{end}}
                                    </tr>
                                    {{end}}
                                </tbody>
                            </table>
                        </div>
                        {{end}}

                        {{if not .result.Errors}}
                        <div class="mt-4">
                            <div class="alert alert-info">
                                <h5><i class="fas fa-info-circle"></i> Ready to Import</h5>
                                <p>The data looks good! You can now proceed with the actual import.</p>
                            </div>

                            <form action="/admin/import/{{.entityType}}/confirm" method="post" enctype="multipart/form-data">
                                <input type="file" name="csv_file" style="display: none;" id="confirm_csv_file" required>
                                <div class="d-grid gap-2">
                                    <button type="button" class="btn btn-success btn-lg" onclick="document.getElementById('confirm_csv_file').click();">
                                        <i class="fas fa-check"></i> Proceed with Import
                                    </button>
                                </div>
                            </form>

                            <script>
                                document.getElementById('confirm_csv_file').addEventListener('change', function() {
                                    if (this.files.length > 0) {
                                        this.closest('form').submit();
                                    }
                                });
                            </script>
                        </div>
                        {{end}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{{end}}